<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestFragment">

    <EditText
        android:id="@+id/ra1_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RA 1"
        android:inputType="numberDecimal|numberSigned"
        android:text="101.271"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/dec1_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dec 1"
        android:inputType="numberDecimal|numberSigned"
        android:text="29.911"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/azimuth1_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Azimuth 1"
        android:inputType="numberDecimal|numberSigned"
        android:text="300"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/altitude1_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Altitude 1"
        android:inputType="numberDecimal|numberSigned"
        android:text="38.5"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/ra2_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RA 2"
        android:inputType="numberDecimal|numberSigned"
        android:text="79.066"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/dec2_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dec 2"
        android:inputType="numberDecimal|numberSigned"
        android:text="-17.597"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/azimuth2_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Azimuth 2"
        android:inputType="numberDecimal|numberSigned"
        android:text="89.27"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/altitude2_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Altitude 2"
        android:inputType="numberDecimal|numberSigned"
        android:text="1.5"
        tools:ignore="Autofill" />

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude: " />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude: " />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>